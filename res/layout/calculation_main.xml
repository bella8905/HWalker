<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background2"
    android:orientation="vertical"
    tools:context=".CalculationMain" >

    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp" >

	   <TextView
	       android:id="@+id/title.time"
	       android:layout_width="60dp"
	       android:layout_height="wrap_content"
	       android:text="TIME"
	       android:textColor="#FFFFFF"
	       android:textSize="20sp" />

	   <TextView
	       android:id="@+id/content.time"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="  53&apos;40&apos;&apos;34"
	       android:textColor="#FFFFFF"
	       android:textSize="20sp" />

    </LinearLayout>
   
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical" >
	    
        <TextView
            android:id="@+id/content.distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center|fill"
            android:shadowColor="#ffffff"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            android:text="3.10"
            android:textColor="#FFFFFF"
            android:textSize="80sp" />

	      <TextView
	          android:id="@+id/content.mile"
	          android:layout_width="match_parent"
	          android:layout_height="wrap_content"
	          android:layout_gravity="bottom|center_vertical"
	          android:layout_marginBottom="3dp"
	          android:text=" mi"
	          android:textColor="#FFFFFF"
	          android:textSize="40sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical" >

	    <Button
	        android:id="@+id/mainButton"
	        android:layout_width="157dp"
	        android:layout_height="159dp"
	        android:layout_marginTop="20dp"
	        android:background="@drawable/mainbutton_play1"
	        android:onClick="startBluetooth" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp" >
	    
       <TextView
           android:id="@+id/title.calory"
           android:layout_width="146dp"
           android:layout_height="wrap_content"
           android:layout_gravity="top|center|fill"
           android:shadowColor="#ffffff"
           android:text="CALORY"
           android:textStyle="bold|italic"
           android:textColor="#f4c47a"
           android:textSize="15sp" />

       <TextView
           android:id="@+id/title.speed"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="top|center|fill"
           android:text="SPEED"
           android:textColor="#f4c47a"
           android:textStyle="bold|italic"
           android:textSize="15sp" />

    </LinearLayout>
        
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical" >
	    
       <TextView
           android:id="@+id/content.calory"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="top|center|fill"
           android:text="105"
           android:textColor="#FFFFFF"
           android:textSize="30sp" />

       <TextView
           android:id="@+id/content.kj"
           android:layout_width="96dp"
           android:layout_height="wrap_content"
           android:layout_gravity="bottom|center_vertical"
           android:gravity="bottom"
           android:text=" KJ"
           android:textColor="#FFFFFF"
           android:textSize="15sp" />
       
        <TextView
           android:id="@+id/content.speed"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="top|center|fill"
           android:text="30"
           android:textColor="#FFFFFF"
           android:textSize="30sp" />

       <TextView
           android:id="@+id/content.kmh"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="bottom|center_vertical"
           android:gravity="bottom"
           android:text=" KM/H"
           android:textColor="#FFFFFF"
           android:textSize="15sp" />

    </LinearLayout>
    
     <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:layout_gravity="fill_horizontal"
         android:orientation="vertical" >

<!--          <ListView
             android:id="@+id/listView_bluetooth"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_weight="1" >
         </ListView> -->

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content" >

             <Button
                 android:id="@+id/song"
                 android:layout_width="107dp"
                 android:layout_height="42dp"
                 android:layout_marginBottom="5dp"
                 android:layout_marginLeft="40dp"
                 android:background="@drawable/songplay1" />

             <Button
                 android:id="@+id/end"
                 android:layout_width="107dp"
                 android:layout_height="42dp"
                 android:layout_marginBottom="5dp"
                 android:layout_marginLeft="50dp"
                 android:background="@drawable/endplay1" />
         </LinearLayout>

    </LinearLayout>

    </LinearLayout>


